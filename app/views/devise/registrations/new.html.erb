<div class="d-flex justify-content-center align-items-center min-vh-100">

  <div class="col d-flex justify-content-center">
    <h2>Sign up</h2>
  </div>

  <div class="col">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false, controller: 'submit' }) do |f| %>

      <div class="row mb-3">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

       <div class="row mb-3">
        <%= f.label :email, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= f.label :password, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <% if @minimum_password_length.present? %>
      <div class="row mb-3">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        </div>
      </div>
      <% end %>

      <div class="row mb-3">
        <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <button type="submit" class="btn btn-primary btn-block d-flex justify-content-center align-items-center" data-action="submit#submit">
          <span data-submit-target="text">Submit</span>
          <span class="spinner-border spinner-border-sm me-2 ms-2 d-none" role="status" aria-hidden="true" data-submit-target="spinner"></span>
        </button>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  
</div>
